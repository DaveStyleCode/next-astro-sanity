---
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SanityPostCard from '../../components/SanityPostCard.astro';
import Pagination from '../../components/Pagination.astro';
import { getPosts, getCategories, getCategoriesWithPosts, type SanityPost, type SanityCategory } from '../../lib/sanity';

export const POSTS_PER_PAGE = 6;

export const getStaticPaths = (async () => {
  // Fetch data in parallel for better performance
  const [posts, allCategories] = await Promise.all([
    getPosts(),
    getCategories(),
  ]);

  const totalPages = Math.ceil(posts.length / POSTS_PER_PAGE);
  const categories = getCategoriesWithPosts(allCategories, posts);

  // Generate pages 2, 3, 4, etc. (page 1 is handled by index.astro)
  return Array.from({ length: Math.max(0, totalPages - 1) }, (_, i) => {
    const pageNum = i + 2;
    const paginatedPosts = posts.slice(
      (pageNum - 1) * POSTS_PER_PAGE,
      pageNum * POSTS_PER_PAGE
    );
    
    return {
      params: { page: String(pageNum) },
      props: {
        posts: paginatedPosts,
        categories,
        totalPages,
        currentPage: pageNum,
      },
    };
  });
}) satisfies GetStaticPaths;

interface Props {
  posts: SanityPost[];
  categories: SanityCategory[];
  totalPages: number;
  currentPage: number;
}

const { posts: paginatedPosts, categories, totalPages, currentPage } = Astro.props;
---

<BaseLayout title={`Blog - Page ${currentPage}`} description="Read all our blog posts about web development, performance, and modern frontend techniques.">
  <div class="mx-auto max-w-5xl px-4 py-12">
    <div class="mb-8">
      <h1 class="text-3xl font-bold">Blog</h1>
      <p class="mt-2 text-secondary">
        Thoughts on web development, frameworks, and building for the modern web.
      </p>
    </div>

    <!-- Categories Filter -->
    {categories.length > 0 && (
      <div class="mb-8">
        <h2 class="mb-3 text-sm font-semibold text-secondary uppercase tracking-wide">Browse by Category</h2>
        <div class="flex flex-wrap gap-2">
          {categories.map((category) => (
            <a
              href={`/category/${category.slug.current}`}
              class="rounded-full bg-white/10 px-3 py-1 text-sm font-medium text-secondary hover:bg-primary-100 hover:text-primary-700 transition-colors"
            >
              {category.title}
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Posts Grid -->
    {paginatedPosts.length > 0 ? (
      <div class="grid gap-6 md:grid-cols-2">
        {paginatedPosts.map((post) => (
          <SanityPostCard post={post} />
        ))}
      </div>
    ) : (
      <p class="text-secondary">No posts on this page.</p>
    )}

    <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/blog" />
  </div>
</BaseLayout>
