---
interface TocItem {
  text: string;
  slug: string;
  level: number;
}

interface Props {
  toc: TocItem[];
}

const { toc } = Astro.props;
---

{toc.length > 0 && (
  <nav class="rounded-lg p-4">
    <h2 class="mb-3 text-sm font-semibold ">Table of Contents</h2>
    <ul class="space-y-2 text-sm">
      {toc.map((item) => (
        <li style={`padding-left: ${(item.level - 1) * 0.75}rem`}>
          <a
            href={`#${item.slug}`}
            class="text-secondary hover:text-primary-600 transition-colors"
          >
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
