---
import { formatDate } from '../lib/utils';
import { urlFor, hasImageAsset, type SanityPost } from '../lib/sanity';

interface Props {
  post: SanityPost;
}

const { post } = Astro.props;
const { title, excerpt, publishedAt, slug, categories, mainImage } = post;
---

<article class="group rounded-lg bg-white/5 p-6 transition-shadow hover:shadow-lg">
  <a href={`/blog/${slug.current}`} class="block">
    {hasImageAsset(mainImage) && (
      <img
        src={urlFor(mainImage).width(600).height(400).url()}
        alt={mainImage.alt || title}
        class="mb-4 rounded-lg object-cover w-full h-48"
        width="600"
        height="400"
        loading="lazy"
        decoding="async"
      />
    )}

    <div class="mb-3 flex flex-wrap items-center gap-2 text-sm text-secondary">
      {publishedAt && (
        <time datetime={publishedAt}>
          {formatDate(new Date(publishedAt))}
        </time>
      )}
    </div>

    <h2 class="mb-2 text-xl font-semibold group-hover:text-primary-600 transition-colors">
      {title}
    </h2>

    {excerpt && (
      <p class="mb-4 text-secondary line-clamp-2">
        {excerpt}
      </p>
    )}
  </a>

  {categories && categories.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {categories.map((category) => (
        <a
          href={`/category/${category.slug.current}`}
          class="rounded-full bg-white/10 px-3 py-1 text-xs font-medium text-secondary hover:bg-primary-100 hover:text-primary-700 transition-colors"
        >
          {category.title}
        </a>
      ))}
    </div>
  )}
</article>
